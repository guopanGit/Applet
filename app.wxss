/* flex布局 */

.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-single {
  display: flex;
}

.flex-al {
  display: flex;
  align-items: center;
}

.flex-bottom {
  display: flex;
  align-items: flex-end;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-items{
  display: flex;
  align-items: center;
}

.flex-end {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.flex1{
  flex: 1;
}

/* 间隙 */

.gaps {
  height: 20rpx;
  background-color: #f8f8f8;
}

/* 按钮 */

.default-btn {
  color: #fff;
  background-color: #199cfb;
  border-radius: 56rpx;
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.gradient-btn {
  color: #fff;
  font-size: 32rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius: 68rpx;
  background: linear-gradient(to right, #fd8e47, #f35643);
}

.buy-btn {
  background: linear-gradient(to right, #fd8e47, #f35643);
}

.advance-btn {
  background: linear-gradient(to right, #19d8fb, #19c3fb);
}

.want {
  background: linear-gradient(to right, #ffae00, #ffc600);
}

.gradient {
  background: linear-gradient(to right, #fd8e47, #f35643);
}

.opa-btn {
  background: linear-gradient(to right, #fec6a3, #f9aaa1) !important;
}

.big-btn,
.small-btn {
  color: #fff;
  text-align: center;
  background: linear-gradient(to right, #fd8e47, #f35643);
}

.big-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 4rpx;
}

.small-btn {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  border-radius: 60rpx;
}

.view-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  height: 60rpx;
  border-radius: 60rpx;
  box-sizing: border-box;
}

.carved-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #ff630e;
  border:1px solid #FF630E;
  box-sizing: border-box;
}

.send-verify {
  color: #ff630e;
  min-width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 60rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  z-index: 10;
}

.i-want {
  color: #ff7800;
  background-color: #ffefb6;
}

.prompt-img {
  width: 22rpx;
  height: 24rpx;
  vertical-align: top;
}

.loc-city {
  width: 160rpx;
  height: 68rpx;
}

.city-icon {
  margin-left: 12rpx;
}

/* 箭头 */

.arrow{
  width: 14rpx;
  height: 14rpx;
  border: solid transparent;
  border-width: 0 2rpx 2rpx 0;
}

.right-arrow {
  transform: rotate(-45deg);
}

.left-arrow {
  transform: rotate(135deg);
}

.up-arrow {
  transform: rotate(-135deg);
}

.down-arrow {
  transform: rotate(45deg);
}

.gold-arrow {
  border-color: #feac0f;
}

.orange-arrow {
  border-color: #ff630e;
}

.black-arrow {
  border-color: #333;
}

.gray-arrow {
  border-color: #999;
}


/* 适配iPhoneX */

.bottom-fixed {
  bottom: 48rpx !important;
}

.bottom-height {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  height: 148rpx;
  background-color: #fff;
}

.bottom-gaps {
  padding-bottom: 148rpx !important;
}

/* 提示通知 */

.notice-wrap {
  background-color: #fff9f5;
  color: #ff630e;
  font-size: 24rpx;
}

.prompt-wrap {
  width: 22rpx;
  height: 24rpx;
  margin-right: 8rpx;
  margin-top: 6rpx;
}

.notice-content {
  padding: 20rpx 30rpx;
  border-bottom: 0.8px solid #ffe6e6;
  border-top: 0.8px solid #ffe6e6;
}

.notice-text {
  width: 100%;
  height: 32rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 弹层 */

.layer-center {
  width: 660rpx;
  font-size: 24rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 20;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.head-wrap {
  display: flex;
  justify-content: space-between;
}

.layer-head {
  padding: 40rpx 40rpx 26rpx 40rpx;
  border-bottom: 0.8px solid #edf0f2;
  box-sizing: border-box;
}

.layer-detail {
  padding: 0 40rpx 30rpx 40rpx;
}

.text-des {
  max-height: 330rpx;
  line-height: 40rpx;
  overflow-y: auto;
}

.max-w330{
  max-width: 330rpx;
}

.text-indent {
  margin-right: 10rpx;
}

.use-des {
  color: #999;
  margin-bottom: 10rpx;
}

.head-title {
  font-size: 42rpx;
}

.mask-wrap,
.bottom-layer {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.mask-wrap {
  right: 0;
  top: 0;
  height: 100%;
  z-index: 12;
  background: rgba(0, 0, 0, 0.6);
}

.bottom-layer {
  font-size: 24rpx;
  background-color: #fff;
  z-index: 14;
}

.layer-title {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border-bottom: 0.8px solid #eee;
}

.layer-content {
  padding: 20rpx 30rpx;
  border-bottom: 0.8px solid #eee;
}

.cont-item {
  margin-top: 20rpx;
}

.cont-item:first-child {
  margin-top: 0;
}

.layer-agree {
  color: #8d8d8d;
  padding-top: 20rpx;
  justify-content: center;
}

.agree-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
  background-color: #e7e7e7;
}

.gradient-wrap {
  padding: 20rpx 30rpx;
}

.login-bg,
.login-btn {
  margin: 0 auto;
  font-size: 32rpx;
  font-weight: 700;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 88rpx;
  margin-top: 40rpx;
}

.login-bg {
  color: #fff;
  background: linear-gradient(to right, #fd8e47, #f35643);
}

.login-bg::after {
  border: none;
}

.login-btn {
  color: #ff630e;
  box-sizing: border-box;
  border: 2rpx solid #ff630e;
}

.point {
  margin: 0 10rpx;
}

.triangle {
  width: 0;
  height: 0;
  border: 6px solid transparent;
  border-left-color: #fff;
  margin-left: 10rpx;
}
.new-triangle{
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 10rpx 0 10rpx 12rpx;
  border-color: transparent transparent transparent #fff;
  margin-left: 10rpx;
}
.triangle-flex-box{
  display: flex;
  align-items: center;
}

.card-btn {
  color: #fff;
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 auto;
  border-radius: 80rpx;
  background: linear-gradient(to right, #fd8e47, #f35643);
}

.touch-agree {
  width: 150rpx;
  height: 60rpx;
  background-color: transparent;
  position: absolute;
  bottom: 16rpx;
  right: 200rpx;
}

.bind-icon {
  transform: rotate(45deg);
}

.high-index {
  z-index: 20;
}

.card-number {
  color: #999;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.card-sell {
  margin-top: 20rpx;
}

.layer-card-content {
  line-height: 36rpx;
  max-height: 500rpx;
  overflow-y: auto;
  padding-top: 30rpx;
}

.detail-item {
  margin-bottom: 14rpx;
  padding: 0 40rpx;
}

.crimson{
  color: #f24141;
}

.opacity{
  opacity: .5;
}
