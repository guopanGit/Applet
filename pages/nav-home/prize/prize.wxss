page {
  width: 100%;
  height: 100%;
  background: url("http://image.mplus.net.cn/images/luck-bg.jpg") no-repeat 0 0;
  background-size: cover;
}

.rules-text {
  color: #fff;
  width: 80rpx;
  height: 80rpx;
  font-size: 24rpx;
  background-color: #ff785d;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  position: absolute;
  left: 30rpx;
  top: 0;
}

.activity-title {
  width: 716rpx;
  height: 303rpx;
  float: right;
}

.activity-machine {
  width: 750rpx;
  height: 804rpx;
  background: url("http://image.mplus.net.cn/images/machine.png") no-repeat 0 0;
  background-size: 100% 100%;
  position: relative;
  display: flex;
  justify-content: center;
}

.luck-man,
.luck-chance {
  color: #563cad;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}

.luck-man {
  width: 380rpx;
  height: 28rpx;
  overflow: hidden;
  font-size: 20rpx;
  top: 96rpx;
}

.luck-chance {
  font-size: 24rpx;
  bottom: 276rpx;
}

.luck-prize {
  width: 695rpx;
  height: 397rpx;
  position: absolute;
  left: 6rpx;
  bottom: -308rpx;
  background: url("http://image.mplus.net.cn/images/my-prize.png") no-repeat 0 0;
  background-size: 100% 100%;
}

.lucky-draw,
.activity-machine::before,
.activity-machine::after {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}

.lucky-draw {
  width: 528rpx;
  height: 272rpx;
  overflow: hidden;
  top: 179rpx;
  /* background-color: #fff; */
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-machine::before,
.activity-machine::after {
  content: "";
  display: block;
  width: 549rpx;
  height: 62rpx;
  background: url("http://image.mplus.net.cn/images/machine-shadow.png") no-repeat 0 0;
  background-size: 100% 100%;
  z-index: 1;
}

.activity-machine::before {
  top: 179rpx;
}

.activity-machine::after {
  bottom: 354rpx;
  transform-origin: left center;
  transform: rotate(180deg) translate(-50%, 0);
  -webkit-transform: rotate(180deg) translate(-50%, 0);
}

.trans-list {
  width: 170rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  position: relative;
}

.trans-mark{
  width: 100%;
  height: 100%;
  position: absolute;
}

.prize-item {
  width: 140rpx;
  height: 120rpx;
}

.luck-btn {
  width: 350rpx;
  height: 112rpx;
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  transform: translate(-50%, 0);
  background-color: transparent;
}

.activity-rules {
  color: #8d5d2a;
  width: 628rpx;
  height: 746rpx;
  padding: 50rpx;
  font-size: 22rpx;
  line-height: 38rpx;
  box-sizing: border-box;
  background: url("http://image.mplus.net.cn/images/activity-rules.png") no-repeat 0 0;
  background-size: 100% 100%;
}

.activity-rules,
.activity-prize {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 14;
}

.rule-content {
  padding: 0 50rpx 0 30rpx;
}

.rule-title {
  color: #933715;
  text-align: center;
  font-size: 32rpx;
  margin-top: 70rpx;
}

.brown-title {
  color: #933715;
  margin-top: 30rpx;
}

.prize-img {
  width: 200rpx;
  height: 200rpx;
}

.prize-content {
  width: 530rpx;
  height: 200rpx;
  position: absolute;
  left: 50%;
  top: 60%;
  transform: translate(-50%, -50%);
  margin-left: 24rpx;
}

.prize-name {
  flex: 1;
  padding: 30rpx 0 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.to-use {
  color: #ff7456;
  width: 100rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 24rpx;
  margin-top: 20rpx;
  border-radius: 44rpx;
  border: 1px solid #ff7456;
}

.activity-prize {
  width: 690rpx;
  height: 689rpx;
  background: url("http://image.mplus.net.cn/images/red-pack.png") no-repeat 0 0;
  background-size: 100% 100%;
}

.prize-layer {
  width: 580rpx;
  margin: 0 auto;
  margin-top: 190rpx;
}

.useing {
  width: 560rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  bottom: 40rpx;
  background-color: transparent;
}


.prize-swiper{
  width: 100%;
  height: 100%;
}

.swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
