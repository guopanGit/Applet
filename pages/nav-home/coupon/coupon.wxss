/* 抢红包 */

page {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  overflow: hidden;
  background-color: #fff8e5;
}

.fz48 {
  font-size: 48rpx;
}

.fz30 {
  font-size: 30rpx;
}

.gold {
  color: #d0851b;
}

.red-content {
  color: #fff;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}

.red-img, .red-wrap {
  width: 100%;
  height: 1000rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.red-total {
  width: 170rpx;
  height: 170rpx;
  text-align: center;
  font-size: 48rpx;
  border-radius: 50%;
  background-color: #ffc066;
  box-sizing: border-box;
  padding-top: 40rpx;
  position: absolute;
  left: 50%;
  top: -85rpx;
  transform: translateX(-50%);
}

.reward-text {
  margin: 160rpx 0 20rpx 30rpx;
}

