/* 选择卖品组件 */

@import '/style/style.wxss';

.count-wrap {
	width: 100%;
	height: 60rpx;
}

.count-time {
	background-color: #ffefe6;
	color: #ff630e;
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 24rpx;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 10;
}

.goods-wrap {
	padding-bottom: 224rpx;
}

.spilled,
.goods-desc {
	width: 490rpx;
}

.goods-desc {
	font-size: 22rpx;
	color: #999;
	height: 28rpx;
}

.adapta-fixed {
	bottom: 48rpx;
}

.adapta-view {
	width: 100%;
	height: 48rpx;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 14;
}

.adapta-list {
	padding-bottom: 148rpx;
}

.save{
	padding: 6rpx 14rpx 6rpx 10rpx;
	border-radius: 44rpx;
	font-size: 20rpx;
	line-height: 100%;
	color: #fe681d;
	background: #fff0e8;
}
