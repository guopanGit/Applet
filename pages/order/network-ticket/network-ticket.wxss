/* 电子影票.wxss */

page {
  background-color: #f5f5f5;
}

.content {
  padding: 24rpx 30rpx 0;
  color: #333333;
}

.card {
  border-radius: 20rpx;
  background-color: #FFFFFF;
}

.film-intro {
  height: 170rpx;
  padding: 30rpx;
  border-bottom: 0.8px dashed #e8e8e8;
}

.film-name {
  margin-bottom: 18rpx;
  font-size: 32rpx;
}

.film-date,
.film-hall {
  font-size: 24rpx;
}

.film-date {
  margin-bottom: 18rpx;
}

.code {
  padding: 50rpx 40rpx;
  position: relative;
}

.code::after {
  content: '';
  position: absolute;
  left: -17rpx;
  top: -17rpx;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.code::before {
  content: '';
  position: absolute;
  right: -17rpx;
  top: -17rpx;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.title {
  font-size: 32rpx;
}

.title-sigh {
  display: inline-block;
  width: 4rpx;
  height: 24rpx;
  margin-right: 12rpx;
  background-color: #1a9bff;
  border-radius: 2px;
}

.seat-swiper {
  height: 680rpx;
  text-align: center;
}

.seat {
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  font-size: 48rpx;
}

.seat-code {
  width: 500rpx;
  height: 500rpx;
}

.indicator {
  display: flex;
  width: 360rpx;
  height: 8rpx;
  border-radius: 8rpx;
  margin: 0 auto;
  background-color: #d8d8d8;
}

.indicator-item {
  flex: 1;
  border-radius: 8rpx;
}

.blue {
  background-color: #028cff;
}

.hint {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}