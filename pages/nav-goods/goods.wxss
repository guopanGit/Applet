.list-title{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* 会员卡 */

.card-item{
  width: 690rpx;
  height: 390rpx;
  margin: 0 auto 40rpx;
  position: relative;
}

.card-img{
  width: 690rpx;
  height: 390rpx;
  border-radius: 20rpx;
}

.card-item-content{
  width: 690rpx;
  height: 390rpx;
  padding-left: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  box-sizing: border-box;
}

.vip-wrap {
  margin: 50rpx auto 28rpx;
  line-height: 1;
}

.vip-img {
  width: 73rpx;
  height: 27rpx;
}

.vip-text {
  font-size: 30rpx;
  margin-left: 10rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, .5);
}

.card-name{
  font-size: 42rpx;
  line-height: 42rpx;
  color: #ffffff;
  font-weight: 700;
}

.money-warp{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 122rpx 40rpx 0 0;
  box-sizing: border-box;
  color: #ffffff;
}

.sell{
  font-weight: 700;
  color: #fff;
  opacity: .5;
  font-size: 24rpx;
  line-height: 24rpx;
}

.cny{
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 700;
}

.money{
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: 700;
  margin-left: 6rpx;
}

.buy-card {
  width: 180rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 34px;
  justify-content: center;
}

.orange {
  color: #fd7c40;
  border-left-color: #fd7c40;
  font-weight: 700;
}

.blue {
  color: #5b88f4;
  border-left-color: #5b88f4;
  font-weight: 700;
}

.gray333{
  color: #333;
  border-left-color: #333;
  font-weight: 700;
}


/* 优惠券 */

.coupon-item{
 padding: 0rpx 30rpx 40rpx;
 display: flex;
}
.coupon-item-img-box{
   width: 240rpx;
  height: 186rpx;
   display: flex;

}
.coupon-item-img{
  width: 240rpx;
  height: 186rpx;
  border-radius: 10rpx;
   display: flex;
}

.coupon-item-wrap{
  margin-left: 30rpx;
  padding: 12rpx 0;
  display: flex;
  flex: 1;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
}

.coupon-item-detail{
  flex: 1;
}
.coupon-item-tit{
  font-size: 34rpx;
  line-height: 34rpx;
}

.buy-btn{
  width: 132rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 18rpx;
  background: #ff630e;
  font-size: 24rpx;
  box-sizing:border-box;
  box-shadow: 0rpx 4rpx 9rpx 1rpx rgba(255, 99, 14, 0.2);
}

.coupon-item-detail-describe{
  margin: 20rpx 0 24rpx 0;
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
}

.price{
  font-size: 32rpx;
}

.digit{
  font-size: 40rpx;
  display: inline-block;
}

/* 礼包 */

.gift-list{
  padding: 0 30rpx;
  font-size: 0;
}

.gift-item{
  display: inline-block;
  width: 330rpx;
  margin-bottom: 40rpx;
  line-height: 1;
}

.gift-item:nth-child(2n+1){
  margin-right: 30rpx;
}

.gift-item-wrap{
  font-size: 32rpx;
}

.gift-item-img-wrap{
  width: 330rpx;
  height: 186rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 20rpx;
}

.gift-item-img{
  width: 330rpx;
  height: 186rpx;
}

.gift-item-intro{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 22rpx;
  color: #ffffff;
  background: rgba(0,0,0,.5);
  border-radius: 0 20rpx 0 0;
}

.gift-item-name{
  margin-bottom: 20rpx;
  font-size: 32rpx;
  line-height: 32rpx;
}

.gift-item-price-fen{
  font-size: 32rpx;
  display: inline-block;
}

.pref-icon{
  width: 89rpx;
  height: 49rpx;
  position: absolute;
  top: -10rpx;
  left: 28rpx;
}
