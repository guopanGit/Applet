/* 卖品商城 */
@import "/style/style.wxss";


/* 卖品组件样式 */
page {
  width: 100%;
  height: 100%;
}

.city-icon{
  margin-bottom: 10rpx;
}

.goods-nav {
  background-color: #f8f8f8;
}

.top-nav {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.bg-gray{
  height: 100%;
  overflow-y: auto;
}

bg-whit{
  background: #fff;
}

.fill{
  width: 100%;
}

.location-wrap {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}

.nav-tab {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin-top: 20rpx;
}

.tab-sell,
.tab-card {
  color: #ff630e;
  width: 150rpx;
  height: 60rpx;
  line-height: 58rpx;
  text-align: center;
  box-sizing: border-box;
  border: 2rpx solid #ff630e;
}

.tab-sell {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.tab-card {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.nav-tab .active {
  color: #fff;
  background-color: #ff630e;
}

.list-wrap{
  height: calc(100% - 80rpx);
  padding-top: 104rpx;
  box-sizing: border-box;
}

.goods-wrap {
  height: 100%;
  display: flex;
  box-sizing: border-box;
}

.scroll-wrap {
  padding: 0 30rpx 148rpx 30rpx;
}

.from-sell {
  padding-top: 100rpx;
  height: 100%;
  box-sizing: border-box;
}

.from-choose {
  padding-top: 60rpx;
}

.goods-nav,
.goods-list,
.scroll-view {
  height: 100%;
}

.goods-list {
  flex: 1;
}

.goods-text {
  max-width: 230rpx;
  margin-right: 10rpx;
}

.goods-max {
  max-width: 400rpx;
   margin-right: 10rpx;
}

.goods-menu {
  width: 168rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.menu-item {
  color: #757575;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
  padding: 34rpx 20rpx;
}

.goods-menu .active {
  font-weight: 700;
  background-color: #fff;
  color: #333;
}

.adapta-cart {
  padding-bottom: 148rpx;
}

.sign{
  display: inline-block;
}

.clearing{
  margin-left: 6rpx;
}

.region{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.region-end{
  justify-content: flex-end;
}

.align-right{
  position: absolute;
  right: -28rpx;
}

/* 商城卡推荐 */
.save{
  padding: 6rpx 14rpx 6rpx 10rpx;
  border-radius: 44rpx;
  font-size: 20rpx;
  line-height: 100%;
  color: #fe681d;
  background: #fff0e8;
}


/* 商品中心 */
.gift-tab{
  height: 88rpx;
}

.from-sell {
  padding-top: 200rpx;
}

.gift-tab{
  height: 80rpx;
  width: 100%;
  position: fixed;
  top: 100rpx;
  display: flex;
	flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #999999;
  background: #fff;
  z-index: 10;
}

.tab-wrap{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.tabItemContainer {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.tab-item{
  text-align: center;
}

.tab-item:last-child{
  margin-right: 0;
}

.tab-wrap .active,.tab-wrap .activity{
  /* font-size: 34rpx; */
  color: #fe681d;
  font-weight: bold;
  /* transition: all 0.3s; */
  transform: scale(calc(34/28));
}
.grid-box{
  display: grid;
  justify-items: center;
}
.tab-item-bottom{
  position: absolute;
  bottom: -28rpx;
}
.under-line{
  /* display: none; */
  position: absolute;
  bottom: 0;
  left: 0;
  /* transition: all 0.3s; */
  width: 66rpx;
  height: 4rpx;
  background: #fe681d;
}
.underLine {
	width: 66rpx;
	height: 4rpx;
	margin-top: 20rpx;
	background: #fe681d;
}

