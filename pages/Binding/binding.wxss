/* pages/binding/binding.wxss */

page {
  background: #fff;
}

.content {
  margin: 60rpx 24rpx 0;
}

.sendBtn {
  min-width: 110rpx;
  text-align: center;
  padding: 14rpx;
  font-size: 22rpx;
  border: 2rpx solid #f25342;
  color: #f25342;
  border-radius: 36rpx;
  margin-right: 0;
}

.sendBtn1 {
  background: #f25342;
  border: none;
  color: #fff;
}

.checkBtn {
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  background: #e7e7e7;
  border-radius: 6rpx;
  vertical-align: middle;
  margin: -6rpx 8rpx 0;
}

.inputBox {
  padding: 24rpx 0;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
}

.inputT {
  height: 28rpx;
  flex: 1;
}

.inputMsg {
  font-size: 28rpx;
  color: #d1d1d1;
}

.check {
  height: 26rpx;
  font-size: 24rpx;
  color: #8d8d8d;
  text-align: center;
  margin-top: 30rpx;
}
@import "../../style/layout.wxss";

.wxLoginWrap {
  height: 210rpx;
}

.wxLogin {
  height: 210rpx;
  background: #fff;
  font-size: 26rpx;
  color: #b5b5b5;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.wxLoginIcon {
  margin: 38rpx auto 0;
  width: 86rpx;
  height: 86rpx;
  border-radius: 45rpx;
  overflow: hidden;
}

.loginImg {
  width: 86rpx;
  height: 86rpx;
  border-radius: 45rpx;
}

/* template style */
@import "../../template/temp.wxss";

.bindPhoneBtn {
  width: 643rpx;
  height: 68rpx;
  line-height: 68rpx;
  border: 2rpx solid #f35643;
  color: #f35643;
  font-size: 32rpx;
  margin-top: 30rpx;
  border-radius: 36rpx;
  background: #fff;
  box-shadow: none;
}

.bindPhoneBtn_hover {
  border-color: #ff9584;
  color: #ff9584;
}
