/* 商场卡推荐 */

.store-referrals{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 44rpx 0 20rpx;
  background: #ffefe5;
  font-size: 26rpx;
}

.add-vip{
  width: 98rpx;
  height: 34rpx;
  margin-right: 20rpx;
}

.instant{
  display: flex;
  align-items: center;
  line-height: 100%;
  /* border-left: 1px solid rgba(0,0,0,.2); */
}

.vertical{
  width: 1px;
  height: 20rpx;
  background: rgba(0,0,0,.2);
  margin-right: 20rpx;
}

.arrows{
  margin-left: 10rpx;
  position: relative;
}

.arrows:after{
  display: block;
  content:'';
  width: 14rpx;
  height: 14rpx;
  border-top: 2rpx solid #333;
  border-right: 2rpx solid #333;
  position: absolute;
  top: -8rpx;
  transform: rotate(45deg);
}

.option{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.uncheck-agree{
  width: 100rpx;
  right: 440rpx;
}

.use-des{
  margin-bottom: 10rpx;
}

/* 优惠券 */
