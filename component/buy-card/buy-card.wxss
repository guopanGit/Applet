  padding: 10rpx 0rpx 30rpx;
  margin-left:40rpx;
  border-bottom: 0.8px solid #edf0f2;
}

.describe{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
  padding-right: 30rpx;
}

.textBox{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.wxc-elip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 36rpx;
}

.elip--multiple {
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.line2{
  -webkit-line-clamp: 2;
}

.unfold{
  color: #1a8bff;
  margin-right: 20rpx;
  white-space: nowrap;
