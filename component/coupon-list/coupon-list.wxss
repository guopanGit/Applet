/* 停车券 */

.park-img{
  display: block;
  width: 690rpx;
  height: 204rpx;
  position: relative;
}

.park:after{
  content: '';
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #f8f8f8;
  position: absolute;
  left: -15rpx;
  top: 50%;
  transform: translate(0, -50%);

}
.park-wrap{
  display: flex;
  position: absolute;
  width: 100%;
  height: 100%;
}

.park-type{
  width: 220rpx;
  height: 204rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.park-coupon{
  text-align: center;
  color: #fff;
}

.park-detail{
  width: 450rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  text-align: left;
}

.voucherName{
  max-width: 404rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.max-w340{
  max-width: 340rpx;
}

.bs{
  box-shadow: 0 2rpx 8rpx 0 rgba(51,51,51,.1);
}
