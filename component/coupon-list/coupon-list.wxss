.type {
  margin-top: 30rpx;
}

.big-font {
  font-size: 54rpx;
}

.discounts-detail {
  padding-left: 30rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  text-align: left;
}

.discounts-message {
  margin: 10rpx 0 35rpx 0;
  height: 32rpx;
  font-size: 24rpx;
  color: #999;
}

.valid {
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-content: center;
  justify-content: space-between;
}

.employ {
  width: 98rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  background: #41a1ff;
  border-radius: 20rpx;
}

.bus-coupon {
  width: 62rpx;
  height: 62rpx;
  margin-bottom: 10rpx;
}

