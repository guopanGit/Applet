/* 优惠券 */

@import "/app.wxss";


.from-home .discounts-wrap:before,
.from-home .discounts-type:after {
  background-color: #aa1d1d;
}

.from-redict .discounts-wrap:before,
.from-redict .discounts-type:after {
  background-color: #fef5dc;
}

.discounts-wrap {
  display: flex;
  position: relative;
  background-color: #fff;
  flex: 9;
}

.select-wrap{
  flex: 1;
  padding-left: 20rpx;
  text-align: right;
}

.selected,
.no-select{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.no-select{
  display: inline-block;
  border-radius: 20rpx;
  border: 1px solid #ccc;
}

.no-round{
  border-radius: 6rpx;
  border: 1px solid #ccc;
}

.discounts-wrap:before {
  content: '';
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #f8f8f8;
  position: absolute;
  right: -15rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.discounts-type {
  width: 220rpx;
  height: 204rpx;
  padding: 14rpx 0 14rpx 14rpx;
  background-size: 100% 204rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
}

.discounts-type:after {
  content: '';
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #f8f8f8;
  position: absolute;
  left: -15rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.frame {
  color: #fff;
  text-align: center;
  height: 178rpx;
  box-sizing: border-box;
  position: relative;
  /* border: 2rpx solid rgba(255, 255, 255, .3); */
  border-right: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.center-coupon {
  margin-right: 14rpx;
}

.frame .big-font {
  margin-bottom: 10rpx;
  font-weight: 700;
}

